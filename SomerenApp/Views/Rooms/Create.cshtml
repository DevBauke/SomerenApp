@model SomerenApp.Models.Room
@{
    ViewData["Title"] = "Create Room";
}

<h4>New Room</h4>

<form action="/Rooms/Create" method="POST">
    <div class="form-group py-2 mt-2 d-block">
        <label for="RoomNumber">Roomnumber: </label>
        <input type="text" id="RoomNumber" name="RoomNumber" class="form-control mt-2 d-block" required value="@Model?.RoomNumber" />
    </div>

    <div class="form-group py-2">
        <label for="RoomSize">Roomsize: </label>
        <input type="text" id="RoomSize" name="RoomSize" class="form-control mt-2 d-block" required value="@Model?.RoomSize" />
    </div>

    <div class="form-group py-2">
        <label for="RoomType">Roomtype: </label>
        <input type="text" id="RoomType" name="RoomType" class="form-control mt-2 d-block" required value="@Model?.RoomType" />
    </div>

    <div class="form-group py-2">
        <label for="Building">Building: </label>
        <input type="text" id="Building" name="Building" class="form-control mt-2 d-block" required value="@Model?.Building" />
    </div>

    <button type="submit" class="btn btn-link mt-3 d-block" style="background-color:#585FD6; color: #FFFFFF; ">Add</button>

    @* foutmelding tonen als er iets mis gaat met de invoer*@
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger mt-3">
            @ViewData["ErrorMessage"];
        </div>       
    }

</form>

<style>
    a, h4{
        color: #585FD6;
    }

    button{
        background-color: #585FD6;
    }
</style>

<a href="/Rooms/Index" class="mt-3 d-block">Back to List</a>

