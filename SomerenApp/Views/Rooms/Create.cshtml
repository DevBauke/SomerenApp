@model SomerenApp.Models.Room
@{
    ViewData["Title"] = "Create Room";
}

<h4>New Room</h4>

<form action="/Rooms/Create" method="POST">

    @*RoomNumber*@
    <div class="form-group py-2 mt-2 d-block fw-medium">
        <label for="RoomNumber">Roomnumber: </label>
        <input type="text" placeholder="- Enter a room number (e.g., A1-03 or B1-04) -" id="RoomNumber" name="RoomNumber" class="form-control mt-2 d-block" required value="@Model?.RoomNumber" />
    </div>

    @*RoomSize*@
    <div class="form-group py-2">
        <label for="RoomSize">Roomsize: </label>
        <select name="RoomSize" id="RoomSize" class="form-control mt-2 d-block">
            <option value=""> - Select a Roomsize - </option>
            <option value="Single Room - GF">Single Room - GF</option> @*room for lecturers*@
            <option value="Dormitory - 8 beds">Dormitory - 8 beds</option> @*room for students*@
        </select>
    </div>

    @*RoomType*@  
    <div class="form-group py-2">
        <label for="RoomType">Roomtype: </label>
        <select name="RoomType" id="RoomType" class="form-control mt-2 d-block">
            <option value=""> - Select a Roomtype - </option>
            <option value="Lecturer">Lecturer</option> @*lecturer*@
            <option value="Student">Student</option> @*student*@
        </select>
    </div>

    @*Building*@
    <div class="form-group py-2">
        <label for="Building">Building: </label>
        <select name="Building" id="Building" class="form-control mt-2 d-block">
            <option value=""> - Select a Building - </option>
            <option value="A">A</option> @*building A*@
            <option value="B">B</option> @*building B*@
        </select>
    </div>

    <button type="submit" class="btn btn-link mt-3 d-block" style="background-color:#585FD6; color: #FFFFFF; ">Add</button>

    @* show error message if something goes wrong with the input*@
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger mt-3">
            @ViewData["ErrorMessage"];
        </div>       
    }
</form>

<style>
    body {
        font-family: 'Aptos', 'sans-serif';
        font-size: 18px;
    }

    a, h4{
        color: #585FD6;
    }

    a:hover {
        color: #000000;
    }

    button{
        background-color: #585FD6;
    }
</style>

<a href="/Rooms/Index" class="mt-3 d-block">Back to List</a>

