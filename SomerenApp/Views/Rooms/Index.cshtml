@model List<SomerenApp.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="text-center">
    <h1 class="display-4">Rooms</h1>
    <a href="/Rooms/Create" class="mt-3 d-block" style="font-size: 18px;">Create New Room</a>

    @* filteren op aantal bedden *@
    <form method="get" action="/Rooms/Index">
        <div class="form-group mt-3">
            <label for="RoomSize" class="Filter_text">Filter by Roomsize</label>
            <select name="RoomSize" id="RoomSize" class="form-control">
                <option value="All">All</option>
                <option value="Single Room - GF">Single Room - GF</option> @*eenpersoonskamer voor docenten *@
                <option value="Dormitory - 8 beds">Dormitory - 8 beds</option> @*slaapzaal met 8 bedden voor studenten *@
            </select>
        </div>

        <button type="submit" class="btn btn-link mt-3 d-block" style="background-color:#585FD6; color: #FFFFFF;">Filter</button>

    </form>

    @* toont alle kamers *@
    <table class="table table-bordered mt-3 table-hover">
        <thead style="background-color: #EEEFFB; color:#585FD6;">
            <tr>
                <th>Roomnumber</th>
                <th>Roomsize</th>
                <th>Roomtype</th>
                <th>Building</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var room in Model)
                {
                    <tr style="background-color: #F9EEE6;">
                        <td>@room.RoomNumber</td>
                        <td>@room.RoomSize</td>
                        <td>@room.RoomType.ToString()</td>
                        <td>@room.Building</td>

                        <td>
                            <a href="/Rooms/Edit/@room.RoomId" class="link">Edit</a> |
                            <a href="/Rooms/Delete/@room.RoomId" class="link">Delete</a>
                        </td>
                    </tr>    
                
                }

            }
        </tbody>
    </table>
</div>
<style>
    .table-hover tbody tr:hover{
        background-color: #F3E0DC;
    }

    .table, table th, .table td{
        border-color: #585FD6;
    }

    a, h1, .Filter_text{
        color: #585FD6;
        font-family: 'Aptos';
    }

    a:hover{
        color: #000000;
    }

    a{
        font-size: 18px;
    }

    .form-group{
        text-align: left;
    }

    .Filter_text{
        margin-bottom: 15px;
        font-weight: bold;
        font-family: 'Aptos';
        font-size: 18px;
    }
</style>
