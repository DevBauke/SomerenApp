@model List<SomerenApp.Models.Lecturer>
@{
	ViewData["Title"] = "Lecturer";
}
<div class="text-center">
	<h1 class="display-4 text-info">Lecturers</h1>
	<a href="Lecturers/Create">Add Lecturer</a>
</div>
<table class="table table-hover">
	<thead class="table-dark">
		<tr>
			<th>Last name</th>
			<th>First name</th>
			<th>Age</th>
			<th>Phone number</th>
			<th>Edit/Delete</th>
		</tr>
	</thead>
	<tbody class="bg-opacity-10 bg-black">
		@{
			foreach (Lecturer lecturer in Model)
			{
				<tr>
					<td>@lecturer.LastName</td>
					<td>@lecturer.FirstName</td>
					<td>@lecturer.Age</td>
					<td>@lecturer.PhoneNumber</td>
					<td>
						<a class="alert-warning" href="/Lecturers/Edit/@lecturer.LecturerNumber">Edit</a>
						<a class="alert-danger" href="/Lecturers/Delete/@lecturer.LecturerNumber">Delete</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
